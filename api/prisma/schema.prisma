// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  username  String   @unique
  avatar    String?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  projects Project[]
  cards    Card[]
  comments Comment[]
  teams    Team[]
}

model Team {
  id        String    @id @default(cuid())
  title     String    @unique
  image     String?
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
  projects  Project[]
  users     User[]
}

model Project {
  id        String   @id @default(cuid())
  title     String
  image     String?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  tags      Json?    @default("{}")
  columns   Column[]
  users     User[]
  team      Team?    @relation(fields: [teamId], references: [id])
  teamId    String?
}

model Column {
  id        String   @id @default(cuid())
  title     String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  cards     Card[]

  Project   Project? @relation(fields: [projectId], references: [id])
  projectId String?

  @@unique([title, projectId])
}

model Card {
  id          String    @id @default(cuid())
  title       String
  description String?
  priority    String?
  issueType   String?
  tags        Json?     @default("{}")
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
  assignees   User[]
  comments    Comment[]

  column   Column? @relation(fields: [columnId], references: [id])
  columnId String?
}

model Comment {
  id        String   @id @default(cuid())
  body      String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  author User   @relation(fields: [userId], references: [id])
  userId String

  card   Card?   @relation(fields: [cardId], references: [id])
  cardId String?
}
